{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": ["./types"]
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  
  "include": [
    "src/**/*",
    "src/global.d.ts",
    "**/*.ts", "**/*.eslintrc.js"
  ],
}

